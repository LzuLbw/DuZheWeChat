					"titleNView": {
						"buttons": [{
							"fontWeight": "bold",
							"float": "right",
							"text": "申请发布活动 +",
							"fontSize": "15",
							"color": "#550000",
							"type": "favorite",
							"fontSrc": "/static/yticon.ttf"
