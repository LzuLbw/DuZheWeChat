				"navigationBarTitleText": "活动中心",
				"enablePullDownRefresh": false,
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"fontWeight": "bold",
							"float": "right",
							"text": "我的活动",
							"fontSize": "15",
							"color": "#55aaff",
							"type": "favorite",
							"fontSrc": "/static/yticon.ttf"
