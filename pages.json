							"placeholderColor": "#606266"
						},
						"buttons": [{
								"fontSrc": "/static/yticon.ttf",
								"text": "\ue60d",
								"fontSize": "26",
								"color": "#303133",
								"float": "left",
								"background": "rgba(0,0,0,0)"
							},
							{
								"fontSrc": "/static/yticon.ttf",
								"text": "\ue744",
								"fontSize": "27",
								"color": "#303133",
								"background": "rgba(0,0,0,0)",
